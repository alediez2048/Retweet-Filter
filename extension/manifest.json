{
  "manifest_version": 3,
  "name": "Retweet Filter",
  "version": "1.3.4",
  "description": "Capture, search, and organize your retweets and Instagram posts locally without using APIs",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "https://www.instagram.com/*",
    "https://instagram.com/*",
    "https://www.tiktok.com/*",
    "https://tiktok.com/*"
  ],
  "optional_permissions": [
    "notifications"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "src/content/capture.js"
      ],
      "css": [
        "src/content/styles.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.instagram.com/*",
        "https://instagram.com/*"
      ],
      "js": [
        "src/content/instagram-capture.js"
      ],
      "css": [
        "src/content/instagram-styles.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.tiktok.com/*",
        "https://tiktok.com/*"
      ],
      "js": [
        "src/content/tiktok-capture.js"
      ],
      "css": [
        "src/content/tiktok-styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Retweet Filter"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/lib/*.js",
        "src/dashboard/*"
      ],
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*",
        "https://www.instagram.com/*",
        "https://instagram.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}